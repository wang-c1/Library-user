<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
 <class catalog="BookStore" name="com.javaeetest.entity.User"
  schema="dbo" table="tb_user">
  <id name="userId" type="java.lang.Integer">
   <column name="userId"/>
   <generator class="native"/>
  </id>
  <property generated="never" lazy="false" name="userName" type="java.lang.String">
   <column length="20" name="userName" not-null="true"/>
  </property>
  <property generated="never" lazy="false" name="userPassword" type="java.lang.String">
   <column length="50" name="userPassword" not-null="true"/>
  </property>
  <property generated="never" lazy="false" name="userEmail" type="java.lang.String">
   <column length="30" name="userEmail" not-null="true"/>
  </property>
  <property generated="never" lazy="false" name="userNickName" type="java.lang.String">
   <column length="20" name="userNickName" not-null="false"/>
  </property>
  <property generated="never" lazy="false" name="userSex" type="java.lang.String">
   <column length="20" name="userSex" not-null="true"/>
  </property>
  <property generated="never" lazy="false" name="userPhone" type="java.lang.String">
   <column length="20" name="userPhone" not-null="true"/>
  </property>
  <property name="userRemark" type="java.lang.String">
   <column length="200" name="userRemark" not-null="false"/>
  </property>
 </class>
</hibernate-mapping>
